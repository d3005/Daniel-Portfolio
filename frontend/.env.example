# Admin Authentication
# Set this in Vercel environment variables for production
VITE_ADMIN_PASSWORD=your_secure_password_here

# Gemini AI API Key
# Get your API key from https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# Datadog RUM Configuration
# Get Application ID and Client Token from Datadog RUM settings
VITE_DATADOG_APPLICATION_ID=your_datadog_application_id
VITE_DATADOG_CLIENT_TOKEN=your_datadog_client_token
VITE_DATADOG_SITE=datadoghq.com
VITE_APP_VERSION=1.0.0

# Note: For Firebase Authentication (recommended), 
# create an admin user in Firebase Console > Authentication
# Then use email/password login in the admin panel
